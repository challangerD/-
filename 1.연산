"""
plus 더하기
minus 빼기
times 곱하기
division 나누기
negation 부정
power 제곱
reminder 나머지
"""

def getnumber(a,b):
  a = int(input("첫 번째 수를 입력하세요."))
  b = int(input("두 번째 수를 입력하세요."))


def plus():
  getnumber()

  def f_plus(a,b):
   return a + b
  print(f_plus())

def minus():
 getnumber()

 def f_minus(a,b):
   return a-b
 print(f_minus())

def times():
 getnumber()

 def f_times(a,b):
   return a*b
 print(f_times())

def division():
  getnumber()

  def f_division(a,b):
   return a/b
  print(f_division())

def negation():
  a = int(input("숫자를 입력하세요."))
  print(a)
  def f_negation(a):
   return -int(a)
  print(f_negation())


def power():
  a = int(input("숫자를 입력하세요."))
  b = int(input("거듭제곱 할 횟수를 입력하세요."))

  def f_power(a,b):
   return a**b
  print(f_power(a,b))
  

def reminder():
  getnumber()

  def f_reminder(a,b):
   return a//b
  print(f_reminder())

def intro_select(intro):
  if intro == 0:
    plus()

  elif intro == 1:
    minus()

  elif intro == 2:
    times()

  elif intro == 3:
    division()

  elif intro == 4:
    negation()

  elif intro == 5:
    power()
  
  elif intro == 6:
    reminder()

intro = int(input("고르세요: 더하기 = 0, 빼기 = 1, 곱하기 = 2, 나누기 = 3, 부정 = 4, 제곱 = 5, 나머지 = 6"))

